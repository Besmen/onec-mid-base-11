&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	//КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
	//ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	КоэффициентСкидки = 1 - (ТекущиеДанные.Скидка + Объект.ДЗ11_СогласованнаяСкидка) / 100;
	Если КоэффициентСкидки < 0 Тогда 
		КоэффициентСкидки = 0;
	КонецЕсли;
	ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	
	РассчитатьСуммуДокумента();
		
КонецПроцедуры

&НаКлиенте
Процедура ДЗ11_ДЗ11_ПересчитатьСуммуВместо(Команда)
	
	Если Элементы.Страницы.ТекущаяСтраница.Заголовок = "Товары" Тогда 
		ТекущиеДанные = Элементы.Товары.ТекущиеДанные;
	ИначеЕсли Элементы.Страницы.ТекущаяСтраница.Заголовок = "Услуги" Тогда 
		ТекущиеДанные = Элементы.Услуги.ТекущиеДанные;
	КонецЕсли;

	ДЗ11_ПерерасчетСуммы(ТекущиеДанные); 
	РассчитатьСуммуДокумента();
	
КонецПроцедуры

&НаКлиенте
Асинх Процедура ДЗ11_ДЗ11_СогласованнаяСкидкаПриИзмененииВместо(Элемент)  
	
	Ответ = Ждать ВопросАсинх("Сделать пересчет суммы со скидкой?", РежимДиалогаВопрос.ДаНет);
	Если Ответ = КодВозвратаДиалога.Да Тогда
		Если Элементы.Страницы.ТекущаяСтраница.Заголовок = "Товары" Тогда 
			ТекущиеДанные = Элементы.Товары.ТекущиеДанные;
		ИначеЕсли Элементы.Страницы.ТекущаяСтраница.Заголовок = "Услуги" Тогда 
			ТекущиеДанные = Элементы.Услуги.ТекущиеДанные;
		КонецЕсли;
		
		ДЗ11_ПерерасчетСуммы(ТекущиеДанные);
	КонецЕсли;
	
КонецПроцедуры

